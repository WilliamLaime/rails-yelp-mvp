<div class="d-flex justify-content-between align-items-center my-4">
  <h1>Restaurants#index</h1>
  <%= link_to "Add a new restaurant", new_restaurant_path, class: 'btn btn-primary' %>
</div>
<div class="row justify-content-center">
  <div class="col-6">
    <ul class="list-group">
      <% @restaurants.each do |restaurant| %>
        <li class="list-group-item"><%= link_to restaurant.name, restaurant_path(restaurant) %> <span class="badge text-bg-primary"><%= restaurant.category %></span></li>
      <% end %>
    </ul>
  </div>
</div>
